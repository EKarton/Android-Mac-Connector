<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidmacconnector.androidapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidToMacContinuity">
        <activity android:name=".devices.DeviceDetailsActivity" />
        <activity android:name=".devices.DeviceRegistrationActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" /> <!-- The broadcast receiver for SMS messages -->
        <receiver
            android:name=".sms.receiver.ReceivedSmsBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver> <!-- The firebase messaging service -->
        <service
            android:name=".fcm.FcmServiceInstance"
            android:exported="false"
            android:permission="">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service> <!-- Disable starting up FCM on boot time -->
        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="true" />
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false" /> <!-- It is required for FCM notifications to be sent to a particular channel -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="default_channel_id" /> <!-- The MQTT service -->
        <service android:name=".mqtt.MqttService" />

        <receiver
            android:name=".ping.PingDeviceBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".sms.sender.SendSmsBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".sms.threads.GetSmsThreadsBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".sms.messages.GetSmsMessagesBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>